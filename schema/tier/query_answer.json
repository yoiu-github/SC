{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryAnswer",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "required": [
            "admin",
            "status",
            "tier_list",
            "validator"
          ],
          "properties": {
            "admin": {
              "$ref": "#/definitions/HumanAddr"
            },
            "status": {
              "$ref": "#/definitions/ContractStatus"
            },
            "tier_list": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SerializedTierInfo"
              }
            },
            "validator": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "user_info"
      ],
      "properties": {
        "user_info": {
          "type": "object",
          "required": [
            "deposit",
            "tier",
            "timestamp",
            "withdraw_time"
          ],
          "properties": {
            "deposit": {
              "$ref": "#/definitions/Uint128"
            },
            "tier": {
              "type": "integer",
              "format": "uint8",
              "minimum": 0.0
            },
            "timestamp": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            },
            "withdraw_time": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "withdrawals"
      ],
      "properties": {
        "withdrawals": {
          "type": "object",
          "required": [
            "amount",
            "withdrawals"
          ],
          "properties": {
            "amount": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            },
            "withdrawals": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SerializedWithdrawals"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "ContractStatus": {
      "type": "string",
      "enum": [
        "active",
        "stopped"
      ]
    },
    "HumanAddr": {
      "type": "string"
    },
    "SerializedTierInfo": {
      "type": "object",
      "required": [
        "deposit",
        "lock_period"
      ],
      "properties": {
        "deposit": {
          "$ref": "#/definitions/Uint128"
        },
        "lock_period": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "SerializedWithdrawals": {
      "type": "object",
      "required": [
        "amount",
        "claim_time",
        "timestamp"
      ],
      "properties": {
        "amount": {
          "$ref": "#/definitions/Uint128"
        },
        "claim_time": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "timestamp": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "Uint128": {
      "type": "string"
    }
  }
}
